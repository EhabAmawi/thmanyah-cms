# Production Environment Configuration
# Copy this file and update with your production values

# Database Configuration
DATABASE_URL="postgresql://thmanyah:CHANGE_THIS_PASSWORD@postgres:5432/thmanyah_cms?schema=public"
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20

# PostgreSQL Docker Settings
POSTGRES_USER=thmanyah
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD
POSTGRES_DB=thmanyah_cms
POSTGRES_PORT=5432

# JWT Configuration
JWT_SECRET="CHANGE_THIS_TO_A_SECURE_RANDOM_STRING"
JWT_REFRESH_SECRET="CHANGE_THIS_TO_ANOTHER_SECURE_RANDOM_STRING"
