# Development Environment Configuration

# Database Configuration
DATABASE_URL="postgresql://thmanyah_dev:dev_secret@localhost:5433/thmanyah_cms_dev?schema=public"
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# PostgreSQL Docker Settings
POSTGRES_USER=thmanyah_dev
POSTGRES_PASSWORD=dev_secret
POSTGRES_DB=thmanyah_cms_dev
POSTGRES_PORT=5433

# JWT Configuration
JWT_SECRET="dev-jwt-secret-key-change-in-production"
JWT_REFRESH_SECRET="dev-refresh-secret-key-change-in-production"
